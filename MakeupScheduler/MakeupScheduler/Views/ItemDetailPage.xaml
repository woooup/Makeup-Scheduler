<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeupScheduler.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        
        <Label Text="Date:" FontSize="Medium" />
        <Label Text="{Binding Item.Date}" FontSize="Small"/>
        
        <Label Text="StartTime:" FontSize="Medium" />
        <Label Text="{Binding Item.StartTime}" FontSize="Small"/>

        <Label Text="EndTime:" FontSize="Medium" />
        <Label Text="{Binding Item.EndTime}" FontSize="Small"/>

        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Item.Price}" FontSize="Small"/>
    </StackLayout>
</ContentPage>